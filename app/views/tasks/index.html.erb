<h1>ToDo管理</h1>
<% @tasks.each do |task| %>
  <% if task.comprited? %>
  <li><strike><%= task.name %> | <%= task.description %> | <%= task.date %></strike></li>
  <% else %>
  <li><%= task.name %> | <%= task.description %> | <%= task.date %></li>
  <% end %>

  <%= link_to "編集する", edit_task_path(task) %>
  <%= link_to "削除する", task_path(task), method: :delete , data: {confirm: "本当に削除しますか？"}%>

  <% end %>
  <%= form_for @task do |f| %>
  <p>
    やること:
    <%= f.text_field :name %>
    内容:
    <%= f.text_field :description %>
    期日
    <%= f.datetime_select :date %>
    <%= f.submit"作成" %>
  </p>
  <% end %>
